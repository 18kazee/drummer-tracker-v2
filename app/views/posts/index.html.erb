<%= render 'tops/masthead' %>
<section class="page-section" id="posts">
  <div class="container">
    <div class="row">
      <div class="col-xl-3">
      </div>

      <div class="col-xl-6">
        <% if @posts.present? %>
          <div class="text-center">
            <h1 class="mb-5"><%= t('.title') %></h1>
          </div>
          <%= render @posts %>
        <% else %>
          <h5>No posts yet</h5>
        <% end %>
      </div>
    </div>
  </div>
</section>

