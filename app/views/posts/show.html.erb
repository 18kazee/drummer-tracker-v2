<%= turbo_stream_from "comments" %>
<%= render "tops/masthead" %>
<section class="page-section" id="post">
  <div class="container">
    <div class="row">
      <div class="col-xl-3">
      </div>

      <div class="col-xl-6">
        <%= link_to t('helpers.submit.back'), "#{posts_path}#posts", class: 'btn btn-outline-secondary' %>
        <%# 投稿 %>
        <div class="pt-3">
          <%= render 'posts/post', post: @post %>
        </div>
        
        <%# コメント %>
        <div class="pt-3">
          <%= render 'comments/form', post: @post, comment: @comment %>
        </div>
        
        <%# コメント一覧 %>
        <div class="pt-3">
          <% if @comments.present? %>
            <h3 class="text-center"><%= t('.comments') %></h3>
            <div id="comments">
              <%= render @comments %>
            </div>
          <% else %>
            <h3 class="text-center"><%= t('.comments') %></h3>
            <div id="comments">
              <%= render @comments %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
