<div style="background-color: gray; height: 90px; width: 100%;"></div>
<section class="page-section bg-light" id="user-show-page">
  <div class="container">

    <%# ユーザー詳細へ出力するためのターボフレーム %>
    <%= turbo_frame_tag 'user-edit' do %>
      <%= form_with model: @user, data: {turbo_method: :patch } do |f| %>
        <div class="form-group">
          <%= f.label :name, User.human_attribute_name(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :profile, User.human_attribute_name(:profile) %>
          <%= f.text_area :profile, class: 'form-control' %>
        <div class="form-group">
          <%= f.label :avatar, User.human_attribute_name(:avatar) %>
          <%= f.file_field :avatar, class: 'form-control' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div class="mt-3">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to '戻る', user_path(@user), class: 'btn btn-outline-secondary ms-2' %>
        </div>
      <% end %>
    <% end %>

  </div>
</section>
