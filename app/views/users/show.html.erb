<div style="background-color: gray; height: 90px; width: 100%;"></div>
<section class="page-section bg-light">
  <div class="container">
    <div class="row">
      <div class="col-xl-3 text-center" id="user-avatar">
        <%= render partial: 'user_avatar', locals: {user: @user} %>
      </div>

      <div class="col-xl-6 text-start">
        <%= render 'user' %>
      </div>

      <div class="col-xl-3 pt-2">
        <% if @user == current_user %>
          <%= link_to t('.edit'), edit_user_path(@user), class: 'btn btn-primary', data: {turbo_frame: 'user-edit'} %>
        <% end %>
        <%= link_to t('helpers.submit.back'), "#{posts_path}#posts", class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
</section>
